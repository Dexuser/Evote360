@model CandidateUpdateViewModel 

@{
    bool editMode = ViewBag.EditMode ?? false;
    ViewBag.Title = "Edici√≥n de candidatos";
    Layout = "_LayoutPartyLeader";
}

@{
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <p class="text-center">@Html.Raw(ViewBag.Message.Replace("\n", "<br />"))</p>
            <br/>
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<div class="col-12 col-md-6 offset-3">
    <div class="card">
        
        <div class="card-header bg-primary text-center text-light">
            Editar un partido politico
        </div>

        <div class="card-body">
            <form asp-controller="Candidate" asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" value="@Model.Id"/>
                <input type="hidden" asp-for="PoliticalPartyId" value="@Model.PoliticalPartyId"/>
                <input type="hidden" asp-for="IsActive" value="@Model.IsActive"/>
                                
                <div class="mt-2">
                    <label class="form-label" asp-for="FirstName">Nombre</label>
                    <input class="form-control" asp-for="FirstName"/>
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                
                <div class="mt-2">
                    <label class="form-label" asp-for="LastName">Apellido:</label>
                    <input class="form-control" asp-for="LastName"/>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="mt-2">
                    <label class="form-label" asp-for="PhotoFile">Foto:</label>
                    <input class="form-control" asp-for="PhotoFile"/>
                    <span class="text-danger" asp-validation-for="PhotoFile"></span>
                </div>
                
                <div class="mt-4 float-end">
                    <button class="btn btn-outline-success me-2" type="submit">Guardar</button>
                    <a class="btn btn-outline-warning" asp-controller="Candidate" asp-action="Index">Volver al index</a>
                </div>
            </form>
        </div>
    </div>
</div>