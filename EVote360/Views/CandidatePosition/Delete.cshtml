@model CandidatePositionDeleteViewModel 

@{
    ViewBag.Title = "title";
    Layout = "_LayoutPartyLeader";
}

@{
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <p class="text-center">@Html.Raw(ViewBag.Message.Replace("\n", "<br />"))</p>
            <br/>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<div class="row">
    <div class="col-12 col-md-4 offset-4">
        <div class="card">
            <div class="card-header text-center text-light bg-danger">
                <h5 class="card-title">
                    ¿Está seguro que desea desvincular este candidato de este puesto electivo?
                </h5>
            </div>
            <div class="card-body">
                <form asp-controller="CandidatePosition" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" value="@Model.Id"/>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-outline-danger me-2">Aceptar</button>
                        <a asp-controller="CandidatePosition" asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
