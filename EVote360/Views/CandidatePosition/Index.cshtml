@model List<CandidatePositionViewModel>
@{
    ViewData["Title"] = "Asignación de puestos a candidatos";
    Layout = "_LayoutPartyLeader";
    bool dissableControls = ViewBag.DissableControls ?? false;
}
<div class="row">
    <div class="text-center">
        <div class="display-6">Listado asignaciones de puestos a candidatos</div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 col-md-3">
        @if (!dissableControls)
        {
            <a class="btn btn-success" asp-controller="CandidatePosition" asp-action="Create">
                Asignar un nuevo puesto
            </a>
        }
        else
        {
            <a class="btn btn-success disabled">
                Asignar un nuevo puesto
            </a>
        }
    </div>
</div>

<div class="row mt-2">
    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h4 class="display-4">Aun no se ha asignado ningún puesto a algún candidato</h4>
        </div>
    }
    else
    {
        <table class="table table-sm table-light table-striped">
            <thead class="table-primary">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Puesto Electivo</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Candidate!.FirstName</td>
                    <td>@item.Candidate!.LastName</td>
                    <td>@item.ElectivePosition!.Name</td>
                    <td>

                        @if (!dissableControls)
                        {
                            // Controles activos
                            <a class="btn btn-sm btn-outline-danger" asp-controller="CandidatePosition"
                               asp-action="Delete"
                               asp-route-id="@item.Id">
                                Eliminar 
                            </a>

                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-danger disabled">Eliminar </a>
                       }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>