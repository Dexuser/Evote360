@model List<ElectivePositionViewModel>
@{
    ViewBag.Title = "Mantenimiento Puesto electivo";
    Layout = "_LayoutAdministrator";
    bool dissableControls = ViewBag.DissableControls ?? false;
}

<div class="row">
    <div class="text-center">
        <div class="display-4">Listado de puestos electivos</div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 col-md-3">
        @if (!dissableControls)
        {
            // controles activos
            <a class="btn btn-success" asp-controller="ElectivePosition" asp-action="Save">Agregar nuevo puesto
                electivo </a>
        }
        else
        {
            <a class="btn btn-success disabled">Agregar nuevo puesto electivo </a>
        }
    </div>
</div>

<div class="row mt-2">
    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h4 class="display-4">No hay puestos electivos registrados aun</h4>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-12 col-md-3">
                <div class="card">
                    <div class="card-header @(item.IsActive ? "bg-primary" : "bg-secondary")  text-light">
                        <h5 class="text-center card-title">@item.Name</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-subtitle fw-bold">Descripci√≥n:</p>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text fw-bold">
                            Estado:
                            <span class="@(item.IsActive ? "badge bg-primary" : "badge bg-secondary")">
                                @(item.IsActive ? "Activo" : "Inactivo")
                            </span>
                        </p>
                        <div class="mt-3 d-flex justify-content-center">
                            @if (!dissableControls)
                            {
                                // controles activos.
                                <a class="btn btn-outline-warning me-2" asp-controller="ElectivePosition"
                                   asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                                <a class="btn btn-outline-danger" asp-controller="ElectivePosition"
                                   asp-action="ChangeState" asp-route-id="@item.Id">
                                    @(item.IsActive ? "Desactivar" : "Activar")
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-warning disabled me-2 ">Edit</a>
                                <a class="btn btn-outline-danger disabled">
                                    @(item.IsActive ? "Desactivar" : "Activar")
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>