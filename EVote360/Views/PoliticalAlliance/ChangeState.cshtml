@model PoliticalAllianceAcceptRequestViewModel

@{
    ViewBag.Title = "title";
    Layout = "_LayoutPartyLeader";
}

<div class="row">
    <div class="col-12 col-md-4 offset-4">
        <div class="card">
            <div class="card-header text-center text-light @(Model.Accepted ? "bg-success" : "bg-danger")">
                <h5 class="card-title">
                    Â¿Esta seguro de que desea @(Model.Accepted? "aceptar" : "rechazar") la alianza con el partido @($"{Model.Name} {Model.Acronym}")?
                </h5>
            </div>
            <div class="card-body">
                <form asp-controller="PoliticalAlliance" asp-action="ChangeState" method="post">
                    <input type="hidden" asp-for="PoliticalAllianceRequestId" value="@Model.PoliticalAllianceRequestId"/>
                    <input type="hidden" asp-for="Accepted" value="@Model.Accepted"/>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn  @(Model.Accepted ? "btn-outline-success" : "btn-outline-danger") me-2">Aceptar</button>
                        <a asp-controller="PoliticalAlliance" asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
