@model LoginViewModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "_LayoutCitizen";
}

@{
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <p class="text-center">@Html.Raw(ViewBag.Message.Replace("\n", "<br />"))</p>
            <br/>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<div class="d-flex justify-content-center">

    <div class="col-12 col-md-4">
        <div class="card">
            <div class="card-header bg-success text-light"><h5 class="text-center">Login user</h5></div>
            <div class="card-body">
                @Html.ValidationSummary(false,"",new {@class = "text-danger"})
                <form asp-controller="Login" asp-action="Index" method="POST">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">UserName:</label>
                        <input class="form-control" asp-for="UserName" />                   
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password:</label>
                        <input class="form-control" asp-for="Password" />                    
                    </div>
                    
                    <div>
                        <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-door-open"></i> Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
</div>